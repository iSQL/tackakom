@using Tackakom.UserInterface.Helpers
@model IEnumerable<Tackakom.Model.Event>

@{
    ViewBag.Title = "Profile";
}

<h1 class="naslov">Event manager</h1><br/><p>Dobrodošli, <b>@ViewBag.Korisnik</b><br />Na ovoj stranici možete dodavati nove događaje, ili modifikovati i brisati postojeće.</p>


<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<div id="event-list">
    @{int i = 0;}
    @foreach (var item in Model) {
     i = i + 1;
     @Html.Event(i, item, Model.Count());                                  
    }
</div>
@if ((string)ViewData["pageLinks"] != "") { 
   @Html.Raw(ViewData["pageLinks"].ToString())
    }


@section Menu {
		<div class="button">
        <div onclick="AddStuff()" id="btn1"></div>
        <div onclick="Edit()" id="btn2"></div>
        <div onclick="Delete()" id="btn3"></div>
		</div>
}
@section Footer {
	<div id="social">
	    <div id="share">
            <img onclick="postToFacebook(uniqueEventId)" src="../../Content/Slike/Ikonice/woodSoc/facebook.png" />
            <img src="../../Content/Slike/Ikonice/woodSoc/twitter.png" />
            <img src="../../Content/Slike/Ikonice/woodSoc/googleplus.png" />
	    </div>
    </div>
}
