@using Tackakom.UserInterface.Helpers
@model IEnumerable<Tackakom.Model.Event>

@{
	ViewBag.Title = "Početna";
	
}

<h2 class="naslov">Lista događaja</h2>


<div id="event-list">
    @{int i = 0;}
    @foreach (var item in Model) {
		
     i = i + 1;
     @Html.Event(i, item, Model.Count());
                                        
    }
</div>
@if ((string)ViewData["pageLinks"] != "")
{ 
   @Html.Raw(ViewData["pageLinks"].ToString())
   <br /><br />
    }

@section Menu {
@Html.Partial("_FilterByName")
@Html.Partial("_FilterByPlace")
@Html.Partial("_FilterByDate")
}

@section Footer {
	<div id="social">
	    <div id="share">
            <img onclick="postToFacebook(uniqueEventId)" src="../../Content/Slike/Ikonice/woodSoc/facebook.png" />
            <img src="../../Content/Slike/Ikonice/woodSoc/twitter.png" />
            <img src="../../Content/Slike/Ikonice/woodSoc/googleplus.png" />
	    </div>
    </div>
}


